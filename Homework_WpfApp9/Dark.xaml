<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="AllSettingsStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Foreground" Value="White"/>
        <Setter Property="Control.Margin" Value="5"/>
        <Setter Property="Control.Padding" Value="5"/>
    </Style>
    <Style x:Key="WithoutMarginStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Foreground" Value="White"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource AllSettingsStyle}">
        <Setter Property="Button.Height" Value="30"/>
    </Style>
    <Style x:Key="BlackRButtonStyle" BasedOn="{StaticResource AllSettingsStyle}">
        <Setter Property="RadioButton.Content" Value="Белый"/>
    </Style>
    <Style x:Key="StackPanelStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="StackPanel.VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource AllSettingsStyle}">
        <Setter Property="TextBox.FontFamily" Value="Arial"/>
        <Setter Property="TextBox.FontSize" Value="12"/>
        <Setter Property="TextBox.TextWrapping" Value="Wrap"/>
    </Style>
</ResourceDictionary>